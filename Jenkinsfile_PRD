pipeline {
    agent {
        kubernetes {
            yamlFile 'kube_yamls/jenkins/jenkins-pod.yaml'
            retries 2
        }
    }
     environment {
        IMAGE_NAME = 'quickstart'
        TAG = "${env.BUILD_ID}"
    }
    
    stages {
        stage('Delete Pod'){
            steps {
                container('kubectl'){
                        sh 'kubectl delete pod -n quickstart -l app=prd-server'
                }

            }
        }
    }
}
