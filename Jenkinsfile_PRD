pipeline {
    agent {
        kubernetes {
            yamlFile 'kube_yamls/jenkins/jenkins-pod.yaml'
            retries 2
        }
    }
     environment {
        IMAGE_NAME = 'quickstart'
        TAG = 1.0
    }
    
    stages {
        stage('Delete Pod'){
            steps {
                container('kubectl'){
                        sh "kubectl set image -n quickstart deployments/quickstart-prd quickstart=samuelcavalcanti/quickstart:${env.TAG}"

                }

            }
        }
    }
}
